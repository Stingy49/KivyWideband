#:kivy 1.8.1

<WidebandWidget>:
  
  # Background for the text
  canvas:
    Color:
      hsv: self.h, 1, .8
    Rectangle:
      pos: 0, root.top - 200
      size: root.width, 200

  # Sensor text
  Label:
    id: l1
    font_size: 100
    center_x: root.width / 2
    # center_y: root.height / 2
    top: root.top - 50
    text: root.r

  Graph:
    id: graph
    size: root.width, root.height - 204
    ylabel: "AFR"
    #title: "AFR"
    ymin: 6
    ymax: 20
    xmin: 0
    xmax: 10
    y_ticks_major: 3
    y_grid: True

